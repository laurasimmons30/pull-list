<div id="fullpage">
  <%= render partial: 'user_subscription' if signed_in? %>
  
<!--   <div class="section">  
    <div class='week-of-title'>
      <h1>Comics for the Week of <% Comic.comic_date(Date.today) %></h1>
    </div>
  </div>  -->

  <% @this_week_comics.each do |key, value| %>
    <div class="section">
      <div class="section-helper">
      </div>
      <div class='container-other-comics'>
        <div class='publishers'>
          <%= key %>
        </div>
        <div class="other-comics-side">
          <% slices = value.each_slice(12) %>
          <% slices.with_index do |value, index|%>
            <div class="other-comics">
              <% value.each do |title, url| %>
                <div>
                  <p><%= link_to title, url %></p>
                </div>
              <% end %> 
            </div>
          <% end %>
        </div>
      </div>
    </div>    
  <% end %>

</div>
