<div class="weekly-subscriptions">
  <%= render partial: 'user_subscription' if signed_in? %>
</div>

<div class="weekly-comics">
  <h1>Comics for the Week of <%= Comic.comic_date(Date.today) %></h1>

  <table>
    <% @this_week_comics.each do |key, value| %>
      <tr>
        <th><%= key %></th>
      </tr>
        <% value.each do |title, url| %>
            <tr>
              <td><%= link_to title, url %></td>
            </tr>
          <% end %>     
    <% end %>
  </table>
</div>
