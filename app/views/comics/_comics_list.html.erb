<%= form_tag(comics_path, method: "post", ) do %>
  <% @comics.each do |comic| %>
    <div>  
      <%= check_box_tag("comicid_#{comic["id"]}", "#{comic["id"]}---#{comic["title"]}") %>
      <span><%= "#{comic["title"]}" %></span>
    </div>
  <% end %>
  <%= submit_tag "Add to List", id: 'add-button', class: "form_submit" %>
<% end %>
